<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.h3rmt.intellijyuck</id>
    <name>Yuck</name>
    <vendor>H3rmt</vendor>

    <description><![CDATA[
Provides support for <a href="https://github.com/elkowar/eww">Eww's Yuck</a> language
<br>
    ]]></description>


    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Yuck"
                implementationClass="com.github.h3rmt.intellijyuck.YuckFileType"
                fieldName="INSTANCE"
                language="Yuck"
                extensions="yuck"/>
        <lang.parserDefinition
                language="Yuck"
                implementationClass="com.github.h3rmt.intellijyuck.YuckParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Yuck"
                implementationClass="com.github.h3rmt.intellijyuck.YuckSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.github.h3rmt.intellijyuck.YuckColorSettingsPage"/>
        <annotator
                language="Yuck"
                implementationClass="com.github.h3rmt.intellijyuck.YuckAnnotator"/>
        <codeInsight.lineMarkerProvider
                language="Yuck"
                implementationClass="com.github.h3rmt.intellijyuck.YuckLineMarkerProvider"/>
        <completion.contributor
                language="Yuck"
                implementationClass="com.github.h3rmt.intellijyuck.YuckCompletionContributor"/>

        <psi.referenceContributor language="Yuck"
                                  implementation="com.github.h3rmt.intellijyuck.YuckReferenceContributor"/>

        <stubIndex implementation="com.github.h3rmt.intellijyuck.stubs.index.YuckNamesIndex"/>
        <stubElementTypeHolder class="com.github.h3rmt.intellijyuck.psi.YuckTypes"/>
    </extensions>
</idea-plugin>
